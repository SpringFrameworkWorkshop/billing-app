<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="billing" transaction-type="RESOURCE_LOCAL">
        <!-- Persistence provider -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entity classes -->
        <class>io.spring.billing.entities.Client</class>
        <class>io.spring.billing.entities.Product</class>
        <class>io.spring.billing.entities.Bill</class>
        <class>io.spring.billing.entities.Line</class>

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />
            <property name="hibernate.connection.driver_class" value="org.h2.Driver" />
            <property name="hibernate.connection.url" value="jdbc:h2:mem:billing;MODE=MySQL" />
            <property name="hibernate.connection.user" value="sa" />

            <!-- The JDBC URL to the database instance -->
            <!--<property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:billing;MODE=MySQL" />-->
            <!--<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/billing?useSSL=false" />-->
            <!--<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/billing?useSSL=false&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC" />-->

            <!-- The database username -->
            <!--<property name="javax.persistence.jdbc.user" value="a" />-->

            <!-- The database password -->
            <!--<property name="javax.persistence.jdbc.password" value="a" />-->

            <!-- The database creation strategy -->
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
        </properties>
    </persistence-unit>
</persistence>